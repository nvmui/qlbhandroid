<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityNhapMathang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAE0F8"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="NHẬP MẶT HÀNG"
            android:textColor="#F50707"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:textAlignment="center">

            <EditText
                android:id="@+id/editMaMH"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:visibility="gone"></EditText>

            <EditText
                android:id="@+id/edtTenhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên mặt hàng"></EditText>

            <EditText
                android:id="@+id/edtSoluong"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Số lượng"
                android:inputType="number"></EditText>

            <Spinner
                android:id="@+id/spnDVT"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"></Spinner>

            <EditText
                android:id="@+id/editDongia"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Đơn giá"
                android:inputType="number"></EditText>

            <EditText
                android:id="@+id/editGhiChu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập ghi chú"></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnThem"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Thêm mới"></Button>

                <Button
                    android:id="@+id/btnCapNhat"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Cập nhật"></Button>

                <Button
                    android:id="@+id/btnThoat"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Thoát"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0CC9B7"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="DANH SÁCH MẶT HÀNG"
            android:textColor="#EC0D0D"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <ListView
            android:id="@+id/lvMatHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"></ListView>
    </LinearLayout>

</LinearLayout>